/* 页面容器 */
.course-list-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: white;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 64rpx;
  padding: 0 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.total-count {
  font-size: 24rpx;
  color: #666;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.course-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 24rpx;
}

/* 课程封面 */
.course-cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
}

.course-cover image {
  width: 100%;
  height: 100%;
}

.course-level {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background: rgba(102, 126, 234, 0.9);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: bold;
}

/* 课程信息 */
.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.course-actions {
  display: flex;
  gap: 16rpx;
  margin-top: auto;
}

.action-btn {
  height: 56rpx;
  padding: 0 20rpx;
  border: none;
  border-radius: 28rpx;
  font-size: 24rpx;
  flex: 1;
}

.action-btn.edit {
  background: #e3f2fd;
  color: #1976d2;
}

.action-btn.delete {
  background: #ffebee;
  color: #d32f2f;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  color: #666;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #666;
  font-size: 28rpx;
} 