/* 页面容器 */
.upload-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 分区标题 */
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 文件类型选择 */
.category-section {
  margin-bottom: 40rpx;
}

.category-tabs {
  display: flex;
  gap: 16rpx;
}

.tab-item {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  border: 2rpx solid #e5e5e5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.tab-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.upload-btn {
  width: 100%;
  background: #fafafa;
  border: 2rpx dashed #e5e5e5;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  color: #666;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  display: block;
}

.upload-text {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.upload-hint {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 文件列表 */
.files-section {
  margin-bottom: 40rpx;
}

.file-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.file-item:last-child {
  border-bottom: none;
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.file-size {
  font-size: 22rpx;
  color: #999;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  background: #ffebee;
  color: #d32f2f;
  border: none;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: bold;
}

.upload-all-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.upload-all-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 上传进度 */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e5e5e5;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 上传结果 */
.results-section {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-list {
  /* 无额外样式 */
}

.result-item {
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.result-item:last-child {
  border-bottom: none;
}

.result-info {
  margin-bottom: 16rpx;
}

.result-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.result-status {
  font-size: 24rpx;
  font-weight: 500;
}

.result-status.success {
  color: #4caf50;
}

.result-status.error {
  color: #f44336;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.copy-btn, .preview-btn {
  flex: 1;
  height: 64rpx;
  border: none;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.copy-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.preview-btn {
  background: #f3e5f5;
  color: #7b1fa2;
}

.error-message {
  font-size: 22rpx;
  color: #f44336;
  background: #ffebee;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
} 