/* 文章详情页样式 */
.article-detail-page {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
}

.loading-text {
  color: #666;
  font-size: 14px;
}

/* 文章容器 */
.article-container {
  background-color: #fff;
  margin: 10px;
  border-radius: 8px;
  overflow: hidden;
}

/* 文章头部 */
.article-header {
  padding: 20px;
  border-bottom: 1px solid #eee;
}

.article-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 15px;
}

.article-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-bottom: 10px;
}

.article-author,
.article-time,
.article-category {
  font-size: 12px;
  color: #666;
}

.article-category {
  background-color: #e3f2fd;
  color: #1976d2;
  padding: 2px 8px;
  border-radius: 10px;
}

.article-stats {
  display: flex;
  gap: 20px;
}

.stat-item {
  font-size: 12px;
  color: #999;
}

/* 文章封面 */
.article-cover {
  width: 100%;
  height: 200px;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 文章内容 */
.article-content {
  padding: 20px;
  line-height: 1.8;
  font-size: 16px;
  color: #333;
}

/* 操作按钮 */
.article-actions {
  display: flex;
  justify-content: center;
  gap: 40px;
  padding: 20px;
  border-top: 1px solid #eee;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 10px 20px;
  border-radius: 20px;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-icon {
  font-size: 24px;
  margin-bottom: 5px;
}

.action-text {
  font-size: 12px;
  color: #666;
}

.like-btn.liked {
  background-color: #ffe6e6;
}

.like-btn.liked .action-icon {
  color: #ff4757;
}

.like-btn.liked .action-text {
  color: #ff4757;
}

.collect-btn.collected {
  background-color: #fff3e0;
}

.collect-btn.collected .action-icon {
  color: #ff9800;
}

.collect-btn.collected .action-text {
  color: #ff9800;
}

/* 相关文章 */
.related-articles {
  margin-top: 20px;
  background-color: #fff;
  margin: 20px 10px;
  border-radius: 8px;
  padding: 20px;
}

.related-header {
  margin-bottom: 15px;
}

.related-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.related-item {
  display: flex;
  gap: 12px;
  padding: 10px;
  border-radius: 8px;
  background-color: #f8f9fa;
  transition: background-color 0.3s ease;
}

.related-item:active {
  background-color: #e9ecef;
}

.related-cover {
  width: 80px;
  height: 60px;
  border-radius: 4px;
  flex-shrink: 0;
}

.related-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.related-item-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  margin-bottom: 5px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.related-summary {
  font-size: 12px;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 5px;
}

.related-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.related-author,
.related-reads {
  font-size: 11px;
  color: #999;
}