/* 卡片式内容编辑器样式 */
.card-editor-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}



.course-info {
  background-color: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  border: none;
  width: 100%;
}

.course-subtitle {
  font-size: 28rpx;
  color: #666;
  border: none;
  width: 100%;
}

/* 课时创建信息样式 */
.lesson-create-info {
  background-color: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.chapter-name {
  font-size: 26rpx;
  color: #10B981;
  background-color: #f0fdf4;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

.lesson-title,
.lesson-description,
.lesson-duration {
  font-weight: 500;
}

/* 章节创建信息样式 */
.chapter-info {
  background-color: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.section-header {
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.course-name {
  font-size: 26rpx;
  color: #007AFF;
  background-color: #f0f7ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  color: #333;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #fafafa;
  color: #333;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.chapter-title {
  font-weight: 500;
}

.chapter-description {
  resize: none;
}

.content-scroll {
  flex: 1;
  padding-bottom: 140rpx;
}

.content-cards {
  padding: 0 20rpx 20rpx;
}

.content-card {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-type {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.card-type.video {
  background-color: #FF6B6B;
}

.card-type.text {
  background-color: #4ECDC4;
}

.card-type.image {
  background-color: #45B7D1;
}

.card-type.highlight {
  background-color: #F39C12;
}

.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.action-btn.delete {
  background-color: #FF6B6B;
  color: #fff;
}

.video-content {
  padding: 32rpx;
}

.video-preview {
  margin-bottom: 24rpx;
}

.video-player {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.video-stats {
  display: flex;
  gap: 32rpx;
  font-size: 24rpx;
  color: #666;
}

.video-placeholder {
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.text-content {
  padding: 32rpx;
}

.text-title {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 28rpx;
}

.text-area {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fafafa;
  box-sizing: border-box;
}

/* 图片内容 */
.image-content {
  padding: 32rpx;
}

.image-preview {
  position: relative;
  margin-bottom: 24rpx;
}

.image-display {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.change-image-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: rgba(0,0,0,0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.image-placeholder {
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.image-description {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.highlight-content {
  padding: 32rpx;
}

.highlight-title {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fff3cd;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 28rpx;
}

.highlight-points {
  background-color: #fff3cd;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #F39C12;
}

.point-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.point-bullet {
  color: #F39C12;
  font-size: 28rpx;
  margin-right: 12rpx;
  font-weight: bold;
}

.point-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border: none;
  background: transparent;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0;
  margin: 0;
}

.delete-point {
  color: #FF6B6B;
  font-size: 32rpx;
  margin-left: 16rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-point {
  color: #F39C12;
  font-size: 28rpx;
  margin-top: 16rpx;
  display: block;
}

.add-fab {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  background-color: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0,122,255,0.3);
  z-index: 100;
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

.add-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.add-menu.show {
  opacity: 1;
  visibility: visible;
}

.menu-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
}

.menu-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.add-menu.show .menu-content {
  transform: translateY(0);
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  text-align: center;
}

.menu-options {
  display: flex;
  gap: 24rpx;
}

.menu-option {
  flex: 1;
  padding: 32rpx 16rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.option-icon {
  font-size: 48rpx;
}

.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.preview-modal.show {
  opacity: 1;
  visibility: visible;
}

.preview-content {
  position: absolute;
  top: 10%;
  left: 5%;
  right: 5%;
  bottom: 10%;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.preview-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
}

.preview-body {
  flex: 1;
  padding: 0;
  background-color: #f8f9fa;
  height: 100%;
  overflow-y: auto;
}

/* 课时标题区域 */
.preview-lesson-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
  color: white;
  text-align: center;
}

.preview-lesson-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.preview-lesson-description {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
  margin-bottom: 24rpx;
  opacity: 0.9;
}

.preview-lesson-meta {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.meta-item {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

/* 章节标题区域 */
.preview-chapter-header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 40rpx 32rpx;
  color: white;
  text-align: center;
}

.preview-chapter-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.preview-chapter-description {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
  opacity: 0.9;
}

/* 课程标题区域 */
.preview-course-header {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  padding: 40rpx 32rpx;
  color: white;
  text-align: center;
}

.preview-course-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.preview-course-subtitle {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
  opacity: 0.9;
}

/* 内容区域 */
.preview-content-area {
  background: white;
  margin: 0 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
  min-height: 600rpx;
  padding: 40rpx 32rpx;
}

.preview-section {
  margin-bottom: 40rpx;
}

.preview-section:last-child {
  margin-bottom: 0;
}

/* 文本内容样式 */
.preview-text-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.section-content {
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.8;
  display: block;
  text-align: justify;
}

/* 图片内容样式 */
.preview-image-section {
  margin-bottom: 32rpx;
  text-align: center;
}

.section-image {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.image-caption {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
  display: block;
  font-style: italic;
  text-align: center;
}

/* 视频内容样式 */
.preview-video-section {
  margin-bottom: 32rpx;
}

.section-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.video-info {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #7f8c8d;
}

.video-duration, .video-views {
  background: #ecf0f1;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 重点内容样式 */
.preview-highlight-section {
  margin-bottom: 32rpx;
}

.highlight-section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #e67e22;
  display: block;
  margin-bottom: 20rpx;
}

.highlight-box {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #f39c12;
  box-shadow: 0 2rpx 8rpx rgba(243, 156, 18, 0.2);
}

.highlight-point {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.highlight-point:last-child {
  margin-bottom: 0;
}

.point-marker {
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.point-text {
  font-size: 26rpx;
  color: #d68910;
  line-height: 1.6;
  font-weight: 500;
}

/* 音频内容样式 */
.preview-audio-section {
  margin-bottom: 32rpx;
}

.audio-player {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.audio-icon {
  font-size: 32rpx;
}

.audio-title {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.audio-duration {
  font-size: 24rpx;
  color: #7f8c8d;
  background: rgba(255, 255, 255, 0.7);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 测验内容样式 */
.preview-quiz-section {
  margin-bottom: 32rpx;
}

.quiz-box {
  background: linear-gradient(135deg, #e8f5e8 0%, #d4edda 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  border: 2rpx solid #28a745;
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.2);
}

.quiz-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
}

.quiz-title {
  font-size: 28rpx;
  color: #155724;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.quiz-description {
  font-size: 24rpx;
  color: #6c757d;
}

/* 空内容样式 */
.preview-empty-section {
  text-align: center;
  padding: 40rpx;
  color: #bdc3c7;
}

.empty-text {
  font-size: 26rpx;
  font-style: italic;
}

/* 无内容提示 */
.preview-no-content {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #bdc3c7;
}

.no-content-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.no-content-text {
  font-size: 28rpx;
}

/* 预览底部 */
.preview-footer {
  background: #f8f9fa;
  padding: 24rpx 32rpx;
  text-align: center;
  border-top: 1rpx solid #e9ecef;
}

.footer-info {
  font-size: 24rpx;
  color: #6c757d;
  font-style: italic;
}

.bottom-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.1);
}

.toolbar-btn {
  flex: 1;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  background-color: #fff;
  color: #333;
  font-size: 26rpx;
  white-space: nowrap;
  text-align: center;
}

.toolbar-btn.primary {
  background-color: #007AFF;
  color: #fff;
  border-color: #007AFF;
}

.toolbar-btn.draft {
  background-color: #f8f9fa;
  color: #6c757d;
  border-color: #dee2e6;
}

/* 调试日志样式 */
.debug-log-section {
  background: #f8f9fa;
  border-top: 1rpx solid #e9ecef;
  margin-bottom: 20rpx;
}

.debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #e9ecef;
  cursor: pointer;
}

.debug-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #495057;
}

.debug-toggle {
  font-size: 24rpx;
  color: #007AFF;
}

.debug-log-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: #fff;
}

.debug-log-content.expanded {
  max-height: 400rpx;
  border-top: 1rpx solid #e9ecef;
}

.debug-log-item {
  padding: 8rpx 32rpx;
  border-bottom: 1rpx solid #f8f9fa;
}

.debug-log-item:last-child {
  border-bottom: none;
}

.debug-log-text {
  font-size: 22rpx;
  color: #495057;
  font-family: 'Courier New', monospace;
  line-height: 1.4;
  word-break: break-all;
}

.debug-log-empty {
  padding: 40rpx;
  text-align: center;
  color: #6c757d;
  font-size: 24rpx;
}
