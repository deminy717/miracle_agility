/* 页面容器 */
.access-code-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
}

/* 课程信息头部 - 铺满屏幕宽度 */
.course-header {
  background: linear-gradient(135deg, #203b9d 0%, #2c4db5 100%);
  color: white;
  padding: 30rpx 20rpx;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.course-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 20rpx 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.2;
  margin-bottom: 6rpx;
  color: #ffffff;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1;
  color: rgba(255, 255, 255, 0.9);
}

/* 授权码列表 - 铺满屏幕宽度 */
.access-code-list {
  padding: 20rpx 0 0 0;
  width: 100%;
}

.code-item {
  background-color: white;
  border-radius: 0;
  margin-bottom: 2rpx;
  padding: 25rpx 20rpx;
  box-shadow: none;
  border: none;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.code-item:last-child {
  border-bottom: none;
}

/* 授权码头部 - 去掉分割线 */
.code-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.code-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #203b9d;
  font-family: 'Courier New', monospace;
  padding: 8rpx 15rpx;
  background-color: #f8f9ff;
  border-radius: 6rpx;
  border: 1rpx solid #e6e8ff;
}

.code-text:active {
  background-color: #e6e8ff;
}

/* 状态标签 */
.status-badge {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.status-active {
  background-color: #e8f5e8;
  color: #2e7d32;
}

.status-used {
  background-color: #fff3e0;
  color: #f57c00;
}

.status-expired {
  background-color: #ffebee;
  color: #c62828;
}

/* 信息行 - 单行显示，优化间距 */
.code-info {
  margin-top: 12rpx;
}

.info-row {
  margin-bottom: 6rpx;
  line-height: 1.4;
  min-height: 0;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row:empty {
  display: none;
  margin: 0;
  height: 0;
}

.info-text {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
  display: block;
}

.info-text.expired {
  color: #c62828;
}

.expired-tag {
  background-color: #ffebee;
  color: #c62828;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-left: 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 25rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .course-stats {
    padding: 15rpx 10rpx;
  }
  
  .stat-number {
    font-size: 32rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  .code-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .info-text {
    font-size: 24rpx;
  }
} 