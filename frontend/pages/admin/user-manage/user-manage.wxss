.user-manage-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 列表标题 */
.user-list-section {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  background: #203b9d;
  color: white;
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
}

.title-count {
  font-size: 24rpx;
  margin-left: 10rpx;
  opacity: 0.8;
}

/* 用户卡片 */
.user-list {
  max-height: 1000rpx;
  overflow-y: auto;
}

.user-card {
  border-bottom: 1rpx solid #f0f0f0;
}

.user-card:last-child {
  border-bottom: none;
}

.user-header {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: white;
  transition: background-color 0.3s;
}

.user-header:active {
  background-color: #f8f9fa;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 3rpx solid #e9ecef;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #212529;
  margin-bottom: 8rpx;
}

.user-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.course-count {
  font-size: 24rpx;
  color: #6c757d;
  background: #e9ecef;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}



.user-contact {
  display: flex;
  gap: 20rpx;
}

.contact-item {
  font-size: 22rpx;
  color: #6c757d;
}

.expand-icon {
  margin-left: 20rpx;
}

.icon {
  font-size: 24rpx;
  color: #6c757d;
  transition: transform 0.3s;
}

.icon.expanded {
  transform: rotate(180deg);
}

/* 展开的课程列表 */
.user-courses {
  background: #f8f9fa;
  border-top: 1rpx solid #e9ecef;
}

.courses-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.courses-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #495057;
}

.action-buttons {
  display: flex;
  gap: 10rpx;
}

.detail-btn {
  background: #203b9d;
  color: white;
  border: none;
  border-radius: 15rpx;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
}

/* 课程项 */
.course-list {
  padding: 0 30rpx 20rpx;
}

.course-item {
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.course-item:last-child {
  margin-bottom: 0;
}

.course-info {
  margin-bottom: 15rpx;
}

.course-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #212529;
  display: block;
  margin-bottom: 8rpx;
}

.course-meta {
  display: flex;
  gap: 15rpx;
}

.registration-type {
  font-size: 22rpx;
  color: #6c757d;
  background: #e9ecef;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.registration-date {
  font-size: 22rpx;
  color: #6c757d;
}



/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 用户详情模态框 */
.user-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  background: #203b9d;
  color: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

/* 用户详情模态框中的section-title样式 */
.modal-body .section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  background: transparent;
  padding: 0;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 26rpx;
  color: #495057;
  width: 200rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.form-value {
  font-size: 26rpx;
  color: #212529;
  flex: 1;
  text-align: right;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  background: #f8f9fa;
}

.confirm-btn {
  background: #203b9d;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  width: 100%;
} 