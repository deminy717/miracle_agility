/* 引用文章创建页面的样式 */
@import "../article-create/article-create.wxss";

/* 章节创建页面特有样式 */
.chapter-create-page {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 60rpx 32rpx 40rpx;
  background: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 表单容器 */
.form-container {
  padding: 32rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.form-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 20rpx;
}

.form-label text:after {
  content: " *";
  color: #ff4d4f;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4285f4;
  background: white;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 180rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #4285f4;
  background: white;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 错误提示 */
.error-tip {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}



/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-secondary:active {
  background: #e8e8e8;
}

.btn-primary {
  background: #4285f4;
  color: white;
}

.btn-primary:active {
  background: #3367d6;
}

.btn:disabled {
  opacity: 0.6;
  background: #ddd !important;
  color: #999 !important;
}