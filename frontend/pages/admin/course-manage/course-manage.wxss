.course-manage-page {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  flex: 1;
  background: white;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 搜索和筛选 */
.search-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.search-box {
  flex: 1;
  position: relative;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  padding: 24rpx 60rpx 24rpx 24rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.filter-picker {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  min-width: 160rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.picker-text {
  font-size: 28rpx;
  color: #374151;
  text-align: center;
}

/* 课程列表 */
.courses-list {
  margin-bottom: 120rpx;
}

.course-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
}

.course-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.15);
}

.course-cover {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.course-cover image {
  width: 100%;
  height: 100%;
  background: #f3f4f6;
}

.course-status {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.status-published {
  background: #10b981;
}

.status-draft {
  background: #f59e0b;
}

.course-info {
  flex: 1;
  min-width: 0;
}

.course-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-description {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-meta {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-item {
  font-size: 22rpx;
  color: #9ca3af;
}

.course-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex-shrink: 0;
  align-items: flex-start;
}

.action-btn {
  min-width: 120rpx;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  padding: 0 12rpx;
}

.edit-btn {
  background: #3b82f6;
}

.chapter-btn {
  background: #10b981;
}

.code-btn {
  background: #8b5cf6;
}

.status-btn {
  background: #f59e0b;
}

.delete-btn {
  background: #ef4444;
}

.action-btn:active {
  transform: scale(0.95);
}

.btn-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  white-space: nowrap;
}

/* 开关样式 */
.switch-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 8rpx 0;
  width: 80rpx;
  order: -1;
}

.switch {
  width: 80rpx;
  height: 44rpx;
  border-radius: 22rpx;
  position: relative;
  transition: all 0.3s ease;
  cursor: pointer;
}

.switch-on {
  background-color: #34d399;
}

.switch-off {
  background-color: #d1d5db;
}

.switch-handle {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  top: 4rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.switch-on .switch-handle {
  left: 40rpx;
}

.switch-off .switch-handle {
  left: 4rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #9ca3af;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
}

/* 浮动添加按钮 */
.fab-button {
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab-button:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

/* 引入课程有效期选择器样式 */
@import "course-validity-picker.wxss";