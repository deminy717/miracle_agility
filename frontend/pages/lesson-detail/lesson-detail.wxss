/* pages/lesson-detail/lesson-detail.wxss */

/* 页面容器 */
.lesson-detail-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 顶部导航栏 */
.top-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 1000;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.nav-left, .nav-right {
  width: 120rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-back-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.nav-edit-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading-text {
  color: white;
  font-size: 32rpx;
}

/* 滚动容器 */
.lesson-scroll-view {
  height: 100vh;
  padding-top: 88rpx;
}

/* 课时标题区域 */
.lesson-header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 80rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.lesson-header-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
  pointer-events: none;
}

.lesson-header-content {
  position: relative;
  z-index: 2;
}

.lesson-badge-container {
  margin-bottom: 30rpx;
}

.lesson-badge {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.badge-published {
  background: rgba(76, 175, 80, 0.2);
  border: 2px solid rgba(76, 175, 80, 0.5);
  color: #fff;
}

.badge-draft {
  background: rgba(255, 193, 7, 0.2);
  border: 2px solid rgba(255, 193, 7, 0.5);
  color: #fff;
}

.badge-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.lesson-main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.3;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.lesson-subtitle {
  display: block;
  font-size: 28rpx;
  line-height: 1.5;
  opacity: 0.9;
  margin-bottom: 40rpx;
}

.lesson-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  padding: 20rpx;
  border-radius: 15rpx;
  backdrop-filter: blur(10rpx);
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 600;
}

/* 内容区域 */
.lesson-content-area {
  background: white;
  margin: 0 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
  min-height: 600rpx;
  padding: 40rpx 32rpx;
}

.content-section {
  margin-bottom: 40rpx;
}

.content-section:last-child {
  margin-bottom: 0;
}

/* 文本内容样式 */
.content-text-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.section-content {
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.8;
  display: block;
  text-align: justify;
}

/* 图片内容样式 */
.content-image-section {
  margin-bottom: 32rpx;
  text-align: center;
}

.section-image {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.image-caption {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
  display: block;
  font-style: italic;
  text-align: center;
}

/* 视频内容样式 */
.content-video-section {
  margin-bottom: 32rpx;
}

.section-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.video-info {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #7f8c8d;
}

.video-duration, .video-views {
  background: #ecf0f1;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 重点内容样式 */
.content-highlight-section {
  margin-bottom: 32rpx;
}

.highlight-section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #e67e22;
  display: block;
  margin-bottom: 20rpx;
}

.highlight-box {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #f39c12;
  box-shadow: 0 2rpx 8rpx rgba(243, 156, 18, 0.2);
}

.highlight-point {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.highlight-point:last-child {
  margin-bottom: 0;
}

.point-marker {
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.point-text {
  font-size: 26rpx;
  color: #d68910;
  line-height: 1.6;
  font-weight: 500;
}

/* 音频内容样式 */
.content-audio-section {
  margin-bottom: 32rpx;
}

.audio-player {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.audio-icon {
  font-size: 32rpx;
}

.audio-title {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.audio-duration {
  font-size: 24rpx;
  color: #7f8c8d;
  background: rgba(255, 255, 255, 0.7);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 测验内容样式 */
.content-quiz-section {
  margin-bottom: 32rpx;
}

.quiz-box {
  background: linear-gradient(135deg, #e8f5e8 0%, #d4edda 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  border: 2rpx solid #28a745;
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.2);
}

.quiz-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
}

.quiz-title {
  font-size: 28rpx;
  color: #155724;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.quiz-description {
  font-size: 24rpx;
  color: #6c757d;
}

/* 空内容样式 */
.content-empty-section {
  text-align: center;
  padding: 40rpx;
  color: #bdc3c7;
}

.empty-text {
  font-size: 26rpx;
  font-style: italic;
}

/* 无内容提示 */
.no-content-area {
  background: white;
  margin: 0 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
  min-height: 600rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-content-illustration {
  text-align: center;
}

.no-content-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.no-content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #555;
  display: block;
  margin-bottom: 15rpx;
}

.no-content-subtitle {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

.no-content-action {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 底部操作区域 */
.lesson-actions {
  padding: 30rpx;
  background: white;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 60rpx;
  background: white;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .lesson-main-title {
    font-size: 42rpx;
  }
  
  .lesson-stats {
    gap: 20rpx;
  }
  
  .stat-item {
    padding: 15rpx;
  }
} 