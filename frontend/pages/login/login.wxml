<view class="login-page">
  <view class="login-container">
    <view class="login-card">
      <view class="login-icon">
        <image class="logo-icon" src="/static/images/logo.JPG" mode="aspectFit"></image>
      </view>
      <text class="login-title">欢迎来到奇迹犬敏捷俱乐部</text>
      <text class="login-desc">登录后可享受个性化学习体验</text>
      
      <view class="login-actions">
        <button class="login-btn" bindtap="onWechatLogin">
          微信一键登录
        </button>
        <button class="skip-btn" bindtap="onSkipLogin">暂不登录</button>
      </view>
    </view>
  </view>
</view> 