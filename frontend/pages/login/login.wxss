.login-page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-container {
  padding: 64rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-card {
  background: white;
  border-radius: 40rpx;
  padding: 80rpx 48rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  width: 100%;
  max-width: 500rpx;
  position: relative;
  overflow: hidden;
}

.login-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.login-icon {
  margin-bottom: 40rpx;
}

.paw-icon {
  font-size: 120rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.login-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 64rpx;
  line-height: 1.4;
}

.login-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.login-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 50rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.wechat-icon {
  font-size: 36rpx;
}

.skip-btn {
  background: transparent;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
  border-radius: 50rpx;
  padding: 28rpx 64rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.skip-btn:active {
  background: #f9fafb;
  border-color: #d1d5db;
  color: #374151;
} 