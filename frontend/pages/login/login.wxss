.login-page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-container {
  padding: 64rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-card {
  background: white;
  border-radius: 40rpx;
  padding: 60rpx 48rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  width: 100%;
  max-width: 500rpx;
  position: relative;
  overflow: hidden;
}

/* 移除顶部渐变边框 */

.login-icon {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 16rpx;
  line-height: 1.2;
  white-space: nowrap;
  text-align: center;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 64rpx;
  line-height: 1.4;
}

.login-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.login-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 50rpx;
  padding: 32rpx 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s ease;
  min-width: 300rpx;
  white-space: nowrap;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.skip-btn {
  background: transparent;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
  border-radius: 50rpx;
  padding: 28rpx 64rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.skip-btn:active {
  background: #f9fafb;
  border-color: #d1d5db;
  color: #374151;
} 