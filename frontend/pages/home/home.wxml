<view class="home-page">
  <!-- 俱乐部介绍区域 -->
  <view class="club-section">
    <!-- Logo 主图 -->
    <view class="main-logo-container">
      <image class="main-logo" src="{{clubInfo.logo}}" mode="aspectFill" />
      <view class="logo-overlay"></view>
    </view>
    
    <!-- 俱乐部介绍文字 -->
    <view class="club-intro">
      <text class="intro-description">{{clubInfo.description}}</text>
    </view>
  </view>

  <!-- 骨头分割线 -->
  <view class="bone-divider">
    <image class="bone-icon" src="/static/images/icon/bone.png" mode="aspectFit"></image>
    <image class="bone-icon" src="/static/images/icon/bone.png" mode="aspectFit"></image>
    <image class="bone-icon" src="/static/images/icon/bone.png" mode="aspectFit"></image>
    <image class="bone-icon" src="/static/images/icon/bone.png" mode="aspectFit"></image>
    <image class="bone-icon" src="/static/images/icon/bone.png" mode="aspectFit"></image>
    <image class="bone-icon" src="/static/images/icon/bone.png" mode="aspectFit"></image>
  </view>

  <!-- 最新资讯标题 -->
  <view class="news-header">
    <image class="news-icon" src="/static/images/icon/article.png" mode="aspectFit"></image>
    <text class="news-title">最新资讯</text>
  </view>

  <!-- 资讯列表 -->
  <view class="news-list">
    <view 
      class="news-card" 
      wx:for="{{newsList}}" 
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="onNewsClick"
    >
      <view class="news-content">
        <image class="news-image" src="{{item.image}}" mode="aspectFill" />
        <view class="news-text">
          <text class="news-card-title">{{item.title}}</text>
          <text class="news-summary">{{item.content}}</text>
          <view class="news-meta">
            <text class="news-date">{{item.date}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 更多资讯 -->
  <view class="more-news" bind:tap="goToArticleList">
    <text class="more-text">查看更多资讯 →</text>
  </view>

  <!-- 编辑器入口区域 -->
  <view class="editors-section">
    <!-- 富文本编辑器入口 -->
    <view class="editor-entry" bind:tap="goToRichTextEditor">
      <view class="editor-card">
        <image class="editor-icon" src="/static/images/icon/060_档案 (1).png" mode="aspectFit"></image>
        <view class="editor-text">
          <text class="editor-title">富文本编辑器</text>
          <text class="editor-desc">创建和编辑富文本内容</text>
        </view>
        <text class="editor-arrow">→</text>
      </view>
    </view>

    <!-- 卡片式编辑器入口 -->
    <view class="editor-entry" bind:tap="goToCardEditor">
      <view class="editor-card">
        <image class="editor-icon" src="/static/images/icon/edit.png" mode="aspectFit"></image>
        <view class="editor-text">
          <text class="editor-title">卡片式编辑器</text>
          <text class="editor-desc">分块创建课程内容</text>
        </view>
        <text class="editor-arrow">→</text>
      </view>
    </view>
  </view>
</view> 