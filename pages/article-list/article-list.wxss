.container {
  background: #f8fafc;
  min-height: 100vh;
  padding-top: 0;
}

/* 分类筛选 */
.category-scroll {
  background: white;
  padding: 0 30rpx;
  border-bottom: 1px solid #e2e8f0;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-list {
  display: flex;
  padding: 20rpx 0 20rpx 0;
  margin-left: 16rpx;
}

.category-item {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  background: #f1f5f9;
  color: #64748b;
  font-size: 28rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #203b9d, #1e3a8a);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(32, 59, 157, 0.3);
}

/* 文章列表 */
.article-list {
  padding: 30rpx 30rpx 30rpx 30rpx;
}

.article-card {
  background: white;
  border-radius: 32rpx;
  margin: 0 30rpx 30rpx 30rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.article-card:active {
  transform: translateY(4rpx);
}

.news-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.news-image-container {
  position: relative;
  flex-shrink: 0;
}

.news-image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 24rpx;
}

.category-tag {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: rgba(32, 59, 157, 0.9);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  backdrop-filter: blur(10rpx);
  transform: scale(0.9);
}

.news-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.news-card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-summary {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-date {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 状态提示 */
.loading, .no-more, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text, .no-more-text {
  color: #94a3b8;
  font-size: 28rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  color: #94a3b8;
  font-size: 32rpx;
} 