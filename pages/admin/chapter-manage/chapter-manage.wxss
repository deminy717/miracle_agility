.chapter-manage-page {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

/* 课程信息卡片 */
.course-info-card {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.course-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
}

.course-cover image {
  width: 100%;
  height: 100%;
}

.course-details {
  flex: 1;
}

.course-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.course-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #6b7280;
}

/* 章节部分 */
.chapters-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.add-chapter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 24rpx;
  border: none;
}

.add-chapter-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 章节列表 */
.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.chapter-item:active {
  transform: scale(0.98);
  background: #f3f4f6;
}

.chapter-number {
  width: 48rpx;
  height: 48rpx;
  background: #3b82f6;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

.chapter-info {
  flex: 1;
  margin-right: 24rpx;
}

.chapter-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.chapter-description {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.chapter-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #9ca3af;
}

.status-published {
  color: #10b981;
}

.status-draft {
  color: #f59e0b;
}

/* 章节操作 */
.chapter-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.edit-btn {
  background: #3b82f6;
  color: white;
}

.lesson-btn {
  background: #10b981;
  color: white;
}

.move-btn {
  background: #6b7280;
  color: white;
}

.delete-btn {
  background: #ef4444;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .chapter-manage-page {
    padding: 24rpx;
  }
  
  .course-info-card {
    padding: 24rpx;
  }
  
  .chapters-section {
    padding: 24rpx;
  }
  
  .chapter-item {
    padding: 20rpx;
  }
  
  .chapter-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .action-btn {
    width: 48rpx;
    height: 48rpx;
  }
}