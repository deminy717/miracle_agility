/* 管理后台容器 */
.admin-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 登录部分样式 */
.login-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.login-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.login-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.login-subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

.login-form {
  width: 100%;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #34495e;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #3498db;
  background: #fff;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
}

.login-btn[loading] {
  background: #bdc3c7;
}

/* 管理后台主界面 */
.admin-main {
  padding: 40rpx;
}

.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.admin-info {
  display: flex;
  flex-direction: column;
}

.admin-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.admin-role {
  font-size: 24rpx;
  color: #7f8c8d;
}

.logout-btn {
  background: #e74c3c;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 统计卡片 */
.stats-section {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  padding: 40rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(52, 152, 219, 0.2);
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 40rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.menu-grid {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f8f9fa;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.menu-arrow {
  font-size: 24rpx;
  color: #bdc3c7;
}

/* 快速操作 */
.quick-actions {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  background: white;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.action-btn.primary {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .action-buttons {
    flex-direction: column;
  }
} 