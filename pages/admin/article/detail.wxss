/* 页面容器 */
.article-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 文章内容容器 */
.article-content {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 文章头部 */
.article-header {
  padding: 40rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.article-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.article-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

/* 标签 */
.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 封面图片 */
.article-cover {
  width: 100%;
  text-align: center;
}

.article-cover image {
  width: 100%;
  max-width: 750rpx;
  border-radius: 0;
}

/* 文章描述 */
.article-desc {
  padding: 32rpx 40rpx;
  background: #f8f9fa;
  border-left: 8rpx solid #667eea;
  margin: 0 40rpx;
  border-radius: 0 8rpx 8rpx 0;
}

.article-desc text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  font-style: italic;
}

/* 文章正文 */
.article-body {
  padding: 40rpx;
}

.article-content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  word-break: break-word;
  white-space: pre-wrap;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 40rpx;
  background: #f8f9fa;
}

.edit-btn, .delete-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 500;
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.delete-btn {
  background: #ffebee;
  color: #d32f2f;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 错误状态 */
.error-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.error-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
  display: block;
}

.back-btn {
  height: 72rpx;
  width: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
} 