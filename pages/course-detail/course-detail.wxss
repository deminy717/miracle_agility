.course-detail-page {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 课程Banner */
.course-banner {
  position: relative;
  height: 400rpx;
  overflow: hidden;
  border-radius: 0 0 40rpx 40rpx;
}

.banner-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.6), rgba(147, 197, 253, 0.7));
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  z-index: 10;
}

.course-info {
  color: white;
}

.course-category {
  display: inline-block;
  background: rgba(255, 255, 255, 0.25);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.course-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.course-desc {
  display: block;
  font-size: 30rpx;
  color: #f8fafc;
  margin-bottom: 32rpx;
  line-height: 1.6;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

.course-actions {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.start-btn {
  background: #fbbf24;
  color: #1f2937;
  border: none;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(251, 191, 36, 0.4);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(251, 191, 36, 0.4);
}

.collect-btn {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  padding: 14rpx 28rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.collect-btn:active {
  background: rgba(255, 255, 255, 0.25);
}

.course-stats {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-item {
  font-size: 28rpx;
  color: #e0f2fe;
}

.decoration-target {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  font-size: 80rpx;
  opacity: 0.2;
}

.decoration-paw {
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  font-size: 60rpx;
  opacity: 0.15;
}

.progress-section {
  padding: 48rpx;
  padding-top: 0;
  border-top: 2rpx solid rgba(191, 219, 254, 0.3);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #bfdbfe;
}

.progress-value {
  font-size: 32rpx;
  font-weight: bold;
}

.progress-bar {
  background: rgba(191, 219, 254, 0.3);
  border-radius: 20rpx;
  height: 12rpx;
  overflow: hidden;
}

.progress-fill {
  background: #fbbf24;
  height: 100%;
  border-radius: 20rpx;
  transition: width 0.3s ease;
}

/* 章节容器 */
.chapters-container {
  padding: 32rpx;
}

.chapters-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.chapters-icon {
  font-size: 40rpx;
  color: #3b82f6;
  margin-right: 16rpx;
}

.chapters-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
}

.chapters-decoration {
  font-size: 32rpx;
  color: #fbbf24;
  margin-left: 16rpx;
}

/* 章节列表 */
.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.chapter-item {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.chapter-header {
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.chapter-header:active {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
}

.chapter-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.chapter-icon {
  font-size: 48rpx;
  color: #3b82f6;
}

.chapter-text {
  display: flex;
  flex-direction: column;
}

.chapter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 8rpx;
}

.chapter-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.chapter-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.completion-badge {
  font-size: 24rpx;
  background: #dcfce7;
  color: #166534;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.expand-icon {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 课程列表 */
.lessons-list {
  border-top: 2rpx solid #f3f4f6;
}

.lesson-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s ease;
}

.lesson-item:last-child {
  border-bottom: none;
}

.lesson-item:active {
  background-color: #f8fafc;
}

.lesson-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.lesson-status {
  width: 16rpx;
  height: 16rpx;
}

.status-dot {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.status-dot.completed {
  background: #10b981;
}

.status-dot.current {
  background: #f59e0b;
  animation: pulse 2s infinite;
}

.status-dot.pending {
  background: #d1d5db;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.lesson-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.lesson-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 8rpx;
}

.lesson-meta {
  font-size: 24rpx;
  color: #6b7280;
}

.lesson-action {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 32rpx;
}

.action-icon.completed {
  color: #10b981;
}

.action-icon.current {
  color: #f59e0b;
}

.action-icon.pending {
  color: #d1d5db;
} 