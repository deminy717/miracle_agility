.course-page {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 未登录状态样式 */
.login-container {
  padding: 120rpx 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
}

.login-card {
  background: white;
  border-radius: 40rpx;
  padding: 80rpx 48rpx;
  text-align: center;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 500rpx;
}

.login-icon {
  margin-bottom: 32rpx;
}

.paw-icon {
  font-size: 120rpx;
  color: #3b82f6;
}

.login-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 16rpx;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 64rpx;
}

.login-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 50rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-icon {
  font-size: 36rpx;
}

/* 已登录状态样式 */
.course-container {
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #f97316, #ea580c);
  color: white;
  border-radius: 40rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  position: relative;
  overflow: hidden;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.user-level {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-badge {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 40rpx;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  font-weight: 600;
}

.dogs-count {
  font-size: 28rpx;
  color: #fed7aa;
}

.decoration-trophy {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  font-size: 60rpx;
  opacity: 0.2;
}

.decoration-paw {
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  font-size: 40rpx;
  opacity: 0.15;
}

.progress-section {
  padding-top: 32rpx;
  border-top: 2rpx solid rgba(254, 215, 170, 0.3);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #fed7aa;
}

.progress-value {
  font-size: 32rpx;
  font-weight: bold;
}

.progress-bar {
  background: rgba(254, 215, 170, 0.3);
  border-radius: 20rpx;
  height: 12rpx;
  overflow: hidden;
}

.progress-fill {
  background: linear-gradient(90deg, #fbbf24, #f59e0b);
  height: 100%;
  border-radius: 20rpx;
  transition: width 0.3s ease;
}

/* 课程列表 */
.course-section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 40rpx;
  color: #3b82f6;
  margin-right: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
}

.course-count {
  font-size: 28rpx;
  color: #6b7280;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.course-card {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s ease;
}

.course-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.card-decoration {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 36rpx;
  color: #fbbf24;
}

.card-decoration.blue {
  color: #3b82f6;
}

.card-decoration.gray {
  color: #d1d5db;
}

.course-content {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
}

.course-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
  margin-right: 16rpx;
}

.status-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.status-badge.progress {
  background: #dcfce7;
  color: #166534;
}

.status-badge.completed {
  background: #dbeafe;
  color: #1e40af;
}



.course-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
  color: #6b7280;
}

.meta-text {
  font-size: 24rpx;
  color: #6b7280;
}

.course-icon {
  font-size: 36rpx;
  color: #f97316;
}

.course-progress {
  margin-top: 24rpx;
}

.course-progress .progress-bar {
  background: #e5e7eb;
  height: 12rpx;
}

.course-progress .progress-fill {
  background: linear-gradient(90deg, #fbbf24, #f59e0b);
}

/* 退出登录 */
.logout-section {
  padding: 32rpx 0;
}

.logout-btn {
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
} 