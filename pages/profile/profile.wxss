.profile-page {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
  border-radius: 40rpx;
  padding: 40rpx 48rpx;
  margin-bottom: 48rpx;
  position: relative;
  overflow: hidden;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 32rpx;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.2;
}

.edit-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  padding: 14rpx;
  box-sizing: border-box;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.edit-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

/* 数据统计 */
.stats-container {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.stats-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.stats-icon {
  font-size: 40rpx;
  color: #3b82f6;
  margin-right: 16rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
}

.stats-decoration {
  font-size: 32rpx;
  color: #fbbf24;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.stat-item {
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  position: relative;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #3b82f6;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.stat-item .stat-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 28rpx;
  color: #d1d5db;
}

/* 成就系统 */
.achievements-container {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.achievements-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.achievements-icon {
  font-size: 40rpx;
  color: #f59e0b;
  margin-right: 16rpx;
}

.achievements-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
}

.achievements-decoration {
  font-size: 32rpx;
  color: #8b5cf6;
}

.achievements-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.achievement-item {
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.achievement-item.unlocked {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border: 2rpx solid #f59e0b;
}

.achievement-item.locked {
  opacity: 0.5;
}

.achievement-item:active {
  transform: translateY(4rpx);
}

.achievement-icon {
  margin-bottom: 16rpx;
}

.icon-active {
  font-size: 48rpx;
  color: #f59e0b;
}

.icon-inactive {
  font-size: 48rpx;
  color: #d1d5db;
}

.achievement-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 8rpx;
}

.achievement-desc {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.achievement-date {
  font-size: 20rpx;
  color: #92400e;
}

/* 功能菜单 */
.menu-container {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
  display: flex;
  align-items: center;
  gap: 32rpx;
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8fafc;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  background: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #6b7280;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  color: #374151;
}

.menu-arrow {
  font-size: 24rpx;
  color: #d1d5db;
}

/* 退出登录 */
.logout-container {
  padding: 32rpx 0;
}

.logout-btn {
  background: #fee2e2;
  color: #dc2626;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  border: 2rpx solid #fecaca;
} 