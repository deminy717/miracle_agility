/* pages/developer-home/developer-home.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 状态区域 */
.status-section {
  margin-bottom: 60rpx;
}

.status-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-item:last-child {
  margin-bottom: 0;
}

.status-label {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.status-value.dev {
  background: #e8f5e8;
  color: #52c41a;
}

.status-value.prod {
  background: #fff2e8;
  color: #fa8c16;
}

.status-value.user {
  background: #f0f8ff;
  color: #1890ff;
}

/* 功能区域 */
.section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

/* 按钮网格 */
.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-grid.single {
  grid-template-columns: 1fr;
}

.action-btn {
  height: 80rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333;
}

.action-btn.test {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8b4513;
}

.action-btn.warning {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: #8b0000;
}

.action-btn.info {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 测试结果 */
.test-result {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
  max-height: 400rpx;
  overflow-y: auto;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 特殊的三列测试按钮布局 */
.section:nth-child(4) .action-grid {
  grid-template-columns: 1fr 1fr 1fr;
  gap: 15rpx;
}

.section:nth-child(4) .action-btn {
  font-size: 24rpx;
  height: 70rpx;
}