/**index.wxss**/
page {
  height: 100%;
  background-color: #f8f8f8;
}

.scrollarea {
  height: 100%;
}

.container {
  padding: 0 0 20rpx 0;
  box-sizing: border-box;
}

/* 图标字体 */
@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,...') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-newspaper:before {
  content: "\e7be";
}

.icon-playcircle:before {
  content: "\e78b";
}

/* Logo和介绍 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.logo-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #0066cc;
}

.logo-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.club-intro {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  line-height: 1.6;
  font-size: 28rpx;
  color: #333;
  text-align: justify;
}

/* 区块标题 */
.section-title {
  margin: 30rpx 30rpx 20rpx;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #0066cc;
  display: flex;
  align-items: center;
}

.section-title-text .iconfont {
  margin-right: 10rpx;
}

/* 资讯列表 */
.news-list {
  margin-bottom: 40rpx;
}

.article-card {
  display: flex;
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.article-info {
  flex: 1;
  padding: 20rpx;
}

.article-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.article-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-meta {
  font-size: 22rpx;
  color: #999;
  display: flex;
}

.article-date {
  margin-right: 20rpx;
}

.article-image {
  width: 200rpx;
  height: 200rpx;
}

.article-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 视频轮播 */
.video-carousel {
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.video-scroll-container {
  padding: 0 30rpx;
  display: inline-flex;
}

.video-item {
  width: 300rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: inline-block;
}

.video-cover {
  position: relative;
  width: 300rpx;
  height: 180rpx;
}

.video-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-play-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.2);
}

.video-play-icon .iconfont {
  color: white;
  font-size: 50rpx;
}

.video-info {
  padding: 16rpx;
}

.video-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.video-meta {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}
