          </view>
        </view>
        
        <!-- 视频3 -->
        <view class="video-item" bindtap="playVideo" data-id="3">
          <view class="video-cover">
            <image src="https://images.unsplash.com/photo-1551730459-92db2a308d6a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fGRvZyUyMHRyYWluaW5nfGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60" mode="aspectFill"></image>
