/**course-detail.wxss**/
page {
  background-color: #f8f8f8;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 图标字体 */
@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,');
  font-weight: normal;
  font-style: normal;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-book:before {
  content: "\e621";
}

.icon-arrow:before {
  content: "\e633";
}

.icon-play:before {
  content: "\e65d";
}

/* 课程Banner */
.course-banner {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.banner-bg {
  width: 100%;
  height: 100%;
  filter: brightness(0.8);
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.7));
}

.banner-content {
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 2;
  color: #fff;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  line-height: 1.4;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.course-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.course-count {
  font-size: 24rpx;
  margin-right: 20rpx;
}

.course-progress {
  font-size: 24rpx;
  color: #66ccff;
}

.course-desc {
  font-size: 24rpx;
  line-height: 1.5;
  opacity: 0.9;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 章节标题 */
.section-title {
  padding: 30rpx;
  background-color: #fff;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-left: 8rpx solid #0066cc;
  padding-left: 20rpx;
}

/* 章节列表 */
.chapter-list {
  background-color: #fff;
}

.chapter-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.chapter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #f9f9f9;
}

.chapter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.chapter-arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  transition: transform 0.3s ease;
}

.chapter-arrow.expanded {
  transform: rotate(135deg);
}

/* 课时列表 */
.lesson-list {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.lesson-list.expanded {
  max-height: 2000rpx;
}

.lesson-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.lesson-info {
  flex: 1;
}

.lesson-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.lesson-meta {
  display: flex;
  align-items: center;
}

.lesson-duration {
  font-size: 22rpx;
  color: #999;
}

.lesson-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  color: #999;
}

.lesson-status.completed {
  background-color: #e6f7ff;
  color: #0066cc;
}

.lesson-status.learning {
  background-color: #ffe7ba;
  color: #fa8c16;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0066cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 