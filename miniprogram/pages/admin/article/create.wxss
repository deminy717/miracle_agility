/* 页面容器 */
.create-article-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007aff;
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.form-textarea.large {
  min-height: 300rpx;
}

.form-textarea:focus {
  border-color: #007aff;
}

/* 封面上传区域 */
.cover-upload {
  width: 100%;
  height: 240rpx;
  border: 2rpx dashed #e5e5e5;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

.upload-btn {
  width: 100%;
  height: 100%;
  background: #fafafa;
  border: none;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
}

/* 封面预览 */
.cover-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.cover-preview image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.cover-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 40rpx;
}

.cancel-btn, .submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 500;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
} 