/* 复用文章创建页面的样式 */
@import '../article/create.wxss';

/* 视频创建页面特有样式 */
.create-video-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 视频上传区域 */
.video-upload {
  width: 100%;
  min-height: 240rpx;
  border: 2rpx dashed #e5e5e5;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

/* 视频预览 */
.video-preview {
  width: 100%;
  min-height: 240rpx;
  position: relative;
}

.video-preview video {
  width: 100%;
  border-radius: 12rpx;
}

.video-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
} 