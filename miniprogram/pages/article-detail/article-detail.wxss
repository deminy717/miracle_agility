.container {
  padding: 0 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

/* 文章头部 */
.article-header {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.4;
  color: #333;
  margin-bottom: 20rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.article-author {
  margin-right: 20rpx;
}

.article-time {
  margin-right: 20rpx;
}

.article-views {
  margin-right: 20rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
}

.article-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #0066cc;
  background-color: rgba(0, 102, 204, 0.1);
  border-radius: 4rpx;
  padding: 4rpx 12rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 文章内容 */
.article-content {
  padding: 30rpx 0;
  line-height: 1.8;
  color: #333;
  font-size: 28rpx;
}

.article-content image {
  max-width: 100%;
  height: auto;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

/* 文章底部 */
.article-footer {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #eee;
}

.article-share .share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #0066cc;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0066cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 