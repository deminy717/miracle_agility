page {
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
  width: 100vw;
  overflow-x: hidden;
}

/* 导航栏 */
.nav-bar {
  width: 100vw;
  height: 88rpx;
  padding-top: env(safe-area-inset-top);
  background-color: #0066cc;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 0;
  right: 0;
  margin: 0;
  z-index: 100;
}

.nav-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  width: 100%;
  overflow: hidden;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx 60rpx;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  background: #f5f5f5;
}

.login-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.auth-tip {
  background: rgba(255, 193, 7, 0.1);
  border: 2rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  text-align: center;
}

.auth-tip text {
  display: block;
  font-size: 26rpx;
  color: #856404;
  line-height: 1.4;
}

.auth-tip text:first-child {
  font-weight: bold;
  margin-bottom: 8rpx;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 24rpx 80rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
  min-width: 300rpx;
}

.login-btn:disabled {
  opacity: 0.6;
}

.login-btn::after {
  border: none;
}

/* 已登录状态 */
.profile {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100vw;
  left: 0;
  right: 0;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

/* 用户信息 */
.user-info {
  display: flex;
  padding: 40rpx 30rpx;
  background-color: #0066cc;
  color: #fff;
  position: relative;
  width: 100vw;
  left: 0;
  right: 0;
  box-sizing: border-box;
  margin: 0;
  border-top: none;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-detail {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 学习数据 */
.study-data {
  display: flex;
  background-color: #fff;
  padding: 30rpx 0;
  width: 100vw;
  box-sizing: border-box;
  margin-top: 1px;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
}

.data-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.data-item:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 20%;
  right: 0;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}

.data-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066cc;
  margin-bottom: 10rpx;
}

.data-text {
  font-size: 26rpx;
  color: #999;
}

/* 功能列表 */
.menu-list {
  background-color: #fff;
  width: 100vw;
  box-sizing: border-box;
  margin-top: 20rpx;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
}

.menu-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录 */
.logout-btn {
  width: 100vw;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  color: #ff3b30;
  font-size: 30rpx;
  text-align: center;
  margin-top: 20rpx;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0066cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 调试面板样式 */
.debug-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: rgba(0, 0, 0, 0.9);
  color: #00ff00;
  font-family: 'Courier New', monospace;
  z-index: 9999;
  border-top: 2rpx solid #333;
}

.debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #333;
  background: #111;
}

.debug-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #00ff00;
}

.debug-clear-btn {
  background: #ff4444 !important;
  color: white !important;
  border: none !important;
  font-size: 24rpx !important;
}

.debug-logs {
  height: 320rpx;
  padding: 10rpx;
}

.debug-log-item {
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 5rpx 10rpx;
  margin-bottom: 5rpx;
  background: rgba(0, 255, 0, 0.1);
  border-radius: 8rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.debug-empty {
  text-align: center;
  color: #666;
  padding: 40rpx;
  font-size: 28rpx;
}

/* 头像昵称填写模态框 */
.avatar-nickname-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  margin: 40rpx;
  padding: 40rpx;
  position: relative;
  max-width: 600rpx;
  width: 100%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.modal-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.modal-body {
  margin-bottom: 40rpx;
}

/* 头像选择 */
.avatar-section {
  margin-bottom: 30rpx;
  text-align: center;
}

.section-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.avatar-button {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  padding: 0;
  border: none;
  background: transparent;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
  border-radius: 50%;
}

.avatar-button:active .avatar-overlay {
  opacity: 1;
}

.avatar-text {
  color: white;
  font-size: 22rpx;
}

/* 昵称输入 */
.nickname-section {
  margin-bottom: 20rpx;
}

.nickname-input {
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #4CAF50;
  background: white;
}

/* 模态框操作按钮 */
.modal-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-button {
  flex: 1;
  height: 70rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
  line-height: 70rpx;
}

.confirm-button {
  flex: 2;
  height: 70rpx;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
  line-height: 70rpx;
}

.confirm-button.disabled {
  background: #ccc;
}

