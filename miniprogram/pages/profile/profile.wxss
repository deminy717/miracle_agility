page {
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
  width: 100vw;
  overflow-x: hidden;
}

/* 导航栏 */
.nav-bar {
  width: 100vw;
  height: 88rpx;
  padding-top: env(safe-area-inset-top);
  background-color: #0066cc;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 0;
  right: 0;
  margin: 0;
  z-index: 100;
}

.nav-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  width: 100%;
  overflow: hidden;
}

/* 未登录状态 */
.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  background-color: #fff;
  flex: 1;
}

.login-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.login-avatar image {
  width: 100%;
  height: 100%;
}

.login-tips {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.login-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #0066cc;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
}

/* 已登录状态 */
.profile {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100vw;
  left: 0;
  right: 0;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

/* 用户信息 */
.user-info {
  display: flex;
  padding: 40rpx 30rpx;
  background-color: #0066cc;
  color: #fff;
  position: relative;
  width: 100vw;
  left: 0;
  right: 0;
  box-sizing: border-box;
  margin: 0;
  border-top: none;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-detail {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 学习数据 */
.study-data {
  display: flex;
  background-color: #fff;
  padding: 30rpx 0;
  width: 100vw;
  box-sizing: border-box;
  margin-top: 1px;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
}

.data-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.data-item:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 20%;
  right: 0;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}

.data-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066cc;
  margin-bottom: 10rpx;
}

.data-text {
  font-size: 26rpx;
  color: #999;
}

/* 功能列表 */
.menu-list {
  background-color: #fff;
  width: 100vw;
  box-sizing: border-box;
  margin-top: 20rpx;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
}

.menu-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录 */
.logout-btn {
  width: 100vw;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  color: #ff3b30;
  font-size: 30rpx;
  text-align: center;
  margin-top: 20rpx;
  left: 0;
  right: 0;
  margin-left: 0;
  margin-right: 0;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  flex: 1;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0066cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 