/* 管理后台入口样式 */
.admin-entry {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx 30rpx 10rpx 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  color: white;
  border-bottom: none;
  position: relative;
  overflow: hidden;
}

.admin-entry::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 50%);
  pointer-events: none;
}

.admin-entry .menu-text {
