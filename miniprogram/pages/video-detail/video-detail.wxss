.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 视频播放器 */
.video-player {
  width: 100%;
  height: 422rpx;
  position: relative;
}

.video-player video {
  width: 100%;
  height: 100%;
}

/* 视频信息 */
.video-info {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.video-title {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.4;
  color: #333;
  margin-bottom: 16rpx;
}

.video-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.video-views {
  margin-right: 20rpx;
}

.video-desc {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

/* 相关视频 */
.related-videos {
  padding: 30rpx;
  background-color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.video-list {
  display: flex;
  flex-direction: column;
}

.video-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  position: relative;
}

.video-cover {
  width: 100%;
  height: 380rpx;
  border-radius: 8rpx;
}

.video-duration {
  position: absolute;
  right: 10rpx;
  bottom: 50rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.video-item .video-title {
  font-size: 28rpx;
  font-weight: normal;
  margin-top: 10rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0066cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 