.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  color: white;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.5;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.avatar-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-button {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  padding: 0;
  border: none;
  background: transparent;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
  border-radius: 50%;
}

.avatar-button:active .avatar-overlay {
  opacity: 1;
}

.avatar-text {
  color: white;
  font-size: 22rpx;
}

.avatar-fallback {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  position: relative;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  border: 2rpx dashed #ddd;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-plus {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s;
}

.nickname-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.feature-tips {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.button-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 90rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.save-btn.disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

.skip-btn {
  width: 100%;
  height: 80rpx;
  background: transparent;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 76rpx;
  transition: all 0.3s;
}

.skip-btn:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.8);
}

.compatibility-tip {
  background: rgba(255, 193, 7, 0.1);
  border: 1rpx solid rgba(255, 193, 7, 0.3);
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.compatibility-tip .tip-icon {
  color: #ff9800;
  margin-right: 10rpx;
}

.compatibility-tip .tip-text {
  color: #e65100;
  font-size: 24rpx;
} 